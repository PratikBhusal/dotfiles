snippet header "Default header for new cpp files" b
#include <iostream>

int main()
{
    try {
        ${1:std::cout << "Hello World" << std::endl;} 
    }
    catch (...) {
        std::cout << "An error occurred.\n" << std::endl;
        return -1;
    }
    return 0; 
}
endsnippet

snippet inc "Include Template" b
#include <${1:iostream}> 
endsnippet
