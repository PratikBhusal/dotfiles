# Visuals
startup_message off
vbell off

# 256-color support
term screen-256color

# Start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1


# Statusbar
truecolor on
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'


# X scrolling mechanism
termcapinfo xterm* ti@:te@
